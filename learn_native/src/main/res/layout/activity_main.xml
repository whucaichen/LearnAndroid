<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chance.learn_native.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_dial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dial" />

            <Button
                android:id="@+id/bt_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacts" />

            <Button
                android:id="@+id/bt_pick_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People" />

            <Button
                android:id="@+id/bt_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sms" />

            <Button
                android:id="@+id/bt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search" />

            <Button
                android:id="@+id/bt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />

            <Button
                android:id="@+id/bt_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera" />

            <Button
                android:id="@+id/bt_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record" />

            <Button
                android:id="@+id/bt_application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application" />

            <Button
                android:id="@+id/bt_handle_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HandlePeople" />

            <Button
                android:id="@+id/bt_pick_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PickImg" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
