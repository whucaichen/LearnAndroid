<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.transfer.FragTransInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="交易信息" />

        <EditText
            android:id="@+id/et_to_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入转账账号"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_to_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请验证账号姓名" />

        <EditText
            android:id="@+id/et_to_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请验证转账金额"
            android:inputType="number" />

        <WebView
            android:id="@+id/wv_trans_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>

</FrameLayout>
