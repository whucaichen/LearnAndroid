<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.cash.FragCashSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择金额" />

        <RadioGroup
            android:id="@+id/rg_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100元" />

            <RadioButton
                android:id="@+id/rb_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200元" />

            <RadioButton
                android:id="@+id/rb_300"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300元" />

            <RadioButton
                android:id="@+id/rb_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500元" />

            <RadioButton
                android:id="@+id/rb_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000元" />

            <RadioButton
                android:id="@+id/rb_2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2000元" />
        </RadioGroup>

        <WebView
            android:id="@+id/wv_cash_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>
</FrameLayout>
