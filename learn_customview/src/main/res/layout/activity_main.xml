<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zjft.learn_customview.MainActivity">

    <Button
        android:id="@+id/bt_self_paint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自绘控件" />

    <Button
        android:id="@+id/bt_combine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组合控件" />

    <Button
        android:id="@+id/bt_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旋转方块" />

    <Button
        android:id="@+id/bt_anima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画效果" />

    <Button
        android:id="@+id/bt_inherit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_compose"
        android:text="继承控件" />

</LinearLayout>
