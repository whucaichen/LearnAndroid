<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zjft.learn_service.MainActivity">

    <EditText
        android:id="@+id/et_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认信息" />

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_start_service" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_stop_service" />

    <Button
        android:id="@+id/bt_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_bind_service" />

    <Button
        android:id="@+id/bt_unbind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_unbind_service" />

    <Button
        android:id="@+id/bt_sync_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_sync_data" />

    <Button
        android:id="@+id/bt_start_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_start_app" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
